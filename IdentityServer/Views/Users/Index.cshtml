@model IdentityServer.ViewModel.UsersVM
@{
    ViewData["Title"] = "Index";
}

<h2>User administration</h2>

<a style="font-size:2em" role="button" asp-action="AddUser" asp-controller="Users"> Add User</a>

<div class="row" style="margin-top:2em">
    <div class="col">UserName</div>
    <div class="col">Email</div>
    <div class="col">Role</div>
    <div class="col"></div>
</div>

@foreach (var item in Model.Users)
{
    <div class="row" style="margin-top:1em">
        <div class="col">@item.ApplicationUser.UserName</div>
        <div class="col">@item.ApplicationUser.Email</div>
        <div class="col">@item.Roles</div>
        <div class="col">
            <div class="row">
                <div class="col">
                    <a asp-action="EditUserClaims" asp-controller="Users" asp-route-id="@item.ApplicationUser.Id" class="btn btn-primary">Edit claims</a>
                </div>
                <div class="col">
                    <form method="post">
                        <input type="submit" asp-action="DeleteUser" asp-route-id="@item.ApplicationUser.Id" class="btn btn-danger" value="Delete" />
                    </form>
                </div>
            </div>
        </div>
    </div>
}